{
  "name": "@ulixee/apps-chromealive",
  "version": "1.5.4",
  "private": true,
  "license": "MIT",
  "description": "ChromeAlive! powers iterative Ulixee Hero web scraping in the Chrome browser.",
  "repository": "git@github.com:ulixee/apps.git",
  "author": "Data Liberation Foundation",
  "scripts": {
    "build": "yarn build:ui && yarn build:basic && shx cp *.sh ../build/chromealive/ && cd ../build/chromealive && yarn && electron-builder install-app-deps",
    "build:basic": "tsc -b tsconfig.json",
    "build:ui": "yarn workspace @ulixee/apps-chromealive-ui build",
    "watch:basic": "tsc -b -w tsconfig.json",
    "watch:ui": "yarn workspace @ulixee/apps-chromealive-ui watch",
    "watch": "concurrently -k -n app,ui \"yarn watch:ui\" \"yarn watch:basic\"",
    "dist": "yarn build && cd ../build/chromealive && electron-builder -mwl && ./pack.sh",
    "dist:basic": "yarn build:basic && cd ../build/chromealive && electron-builder && ./sign.sh",
    "start": "cd ../build/chromealive && npx electron ."
  },
  "main": "app.js",
  "files": [
    "index.js",
    "install/*"
  ],
  "dependencies": {
    "node-static": "^0.7.11",
    "tslib": "^2.3.0",
    "progress": "^2.0.3",
    "tar": "^6.1.7",
    "compare-versions": "^3.6.0",
    "@ulixee/commons": "^1.5.5"
  },
  "devDependencies": {
    "@types/tar": "^4.0.5",
    "@types/progress": "^2.0.5",
    "electron": "13.1.9",
    "electron-builder": "^22.11.7",
    "shx": "^0.3.3"
  },
  "build": {
    "appId": "dev.ulixee.chromealive",
    "productName": "ChromeAlive!",
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "extendInfo": {
        "LSUIElement": 1
      },
      "target": {
        "target": "dir",
        "arch": [
          "arm64",
          "x64"
        ]
      }
    },
    "win": {
      "target": "dir"
    },
    "linux": {
      "executableName": "ChromeAlive!",
      "category": "Development",
      "target": "dir"
    },
    "publish": [
      {
        "provider": "github"
      }
    ]
  },
  "nohoist": [
    "**/electron",
    "**/electron-webpack",
    "**/electron-webpack/**"
  ]
}
