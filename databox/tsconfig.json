{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "ES2020",
    "module": "CommonJS",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "noImplicitAny": false,
    "sourceMap": true,
    "allowJs": true,
    "noImplicitOverride": true
  },
  "include": ["./**/*.ts", "./**/*.json", ".eslintrc.js", "examples/basic.mjs"],
  "exclude": ["**/tsconfig*.json", "**/node_modules", "packager/test/assets", "**/build"]
}
