{
  "name": "@ulixee/desktop",
  "version": "2.0.0-alpha.20",
  "private": true,
  "main": "index.js",
  "scripts": {
    "build": "yarn build:ui && yarn build:basic && yarn build:bundled-datastore",
    "build:bundled-datastore": "cd ../../build && npx @ulixee/datastore build ./datastore/examples/ulixee-docs.js -o ./desktop/main/assets",
    "build:deps": "cd ../../build/desktop/main && yarn && cross-env DEBUG=* electron-builder install-app-deps",
    "build:monorepo-ts": "cd ../.. && yarn run tsc",
    "build:basic": "yarn build:monorepo-ts && yarn build:bundled-datastore && yarn copy:build && yarn build:deps",
    "build:ui": "yarn workspace @ulixee/desktop-ui build && yarn workspace @ulixee/desktop-chrome-extension build",
    "watch": "yarn copy:build --watch",
    "copy:build": "cd ../../build/desktop/main && node builder/copySources.js ./packages",
    "copy:dist-ui": "shx cp -r ../../build/desktop/main/ui ../../build-dist/desktop/main/ui",
    "copy:dist-dbx": "shx cp -r ../../build/desktop/main/assets/ulixee-docs.dbx.tgz ../../build-dist/desktop/main/assets",
    "copy:dist": "yarn copy:dist-ui && yarn copy:dist-dbx && cd ../../build-dist/desktop/main && cross-env OUT_DIR=\"build-dist\" node builder/copySources.js ./packages",
    "dist": "yarn build:bundled-datastore && yarn build:ui && yarn copy:dist && cd ../../build-dist/desktop/main && yarn && electron-builder --publish onTagOrDraft",
    "dist:basic": "yarn copy:dist && cd ../../build-dist/desktop/main && cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder -m",
    "start": "yarn copy:build && cd ../../build/desktop/main && electron ."
  },
  "repository": "git@github.com:ulixee/platform.git",
  "license": "MIT",
  "dependencies": {
    "@ulixee/cloud": "2.0.0-alpha.20",
    "@ulixee/commons": "2.0.0-alpha.20",
    "@ulixee/crypto": "2.0.0-alpha.20",
    "@ulixee/datastore": "2.0.0-alpha.20",
    "@ulixee/datastore-core": "2.0.0-alpha.20",
    "@ulixee/datastore-plugins-hero": "2.0.0-alpha.20",
    "@ulixee/default-browser-emulator": "2.0.0-alpha.20",
    "@ulixee/desktop-core": "2.0.0-alpha.20",
    "@ulixee/desktop-interfaces": "2.0.0-alpha.20",
    "@ulixee/hero-core": "2.0.0-alpha.20",
    "@ulixee/net": "2.0.0-alpha.20",
    "@ulixee/platform-specification": "2.0.0-alpha.20",
    "@ulixee/sidechain": "2.0.0-alpha.20",
    "@ulixee/specification": "2.0.0-alpha.20",
    "electron-log": "^4.4.6",
    "electron-updater": "^5.0.1",
    "nanoid": "^3.1.30",
    "node-static": "^0.7.11",
    "tslib": "^2.3.1",
    "ws": "^7.4.6"
  },
  "devDependencies": {
    "@electron/notarize": "^1.2.3",
    "@ulixee/datastore-packager": "2.0.0-alpha.20",
    "cross-env": "^7.0.3",
    "electron": "24.1.2",
    "electron-builder": "^24.2.1",
    "tslib": "^2.3.1"
  },
  "optionalDependencies": {
    "electron-clipboard-ex": "^1.3.3",
    "global-mouse-events": "1.1.0",
    "nseventmonitor": "1.0.3"
  },
  "build": {
    "appId": "dev.ulixee.desktop",
    "productName": "Ulixee",
    "afterSign": "scripts/notarize.js",
    "asarUnpack": [
      "**/*.node",
      "node_modules/better-sqlite3",
      "node_modules/@ulixee/datastore-docpage",
      "ui"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "files": [
      "**/*",
      "assets/*",
      "!**/desktop/main/dist",
      "!packages",
      "!dist"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "extendInfo": {
        "LSUIElement": 1
      },
      "entitlements": "assets/entitlements.mac.plist",
      "entitlementsInherit": "assets/entitlements.mac.plist"
    },
    "win": {
      "target": "NSIS"
    },
    "linux": {
      "category": "Development",
      "target": "AppImage"
    },
    "publish": {
      "provider": "github",
      "releaseType": "release"
    },
    "fileAssociations": [
      {
        "ext": "arg",
        "name": "ARG",
        "description": "Ulixee Argons",
        "icon": "arg",
        "rank": "Owner"
      }
    ]
  },
  "nohoist": [
    "**/electron",
    "**/electron-webpack",
    "**/electron-webpack/**",
    "electron-positioner",
    "global-mouse-events",
    "nseventmonitor",
    "electron-updater",
    "better-sqlite3",
    "electron-clipboard-ex"
  ]
}
