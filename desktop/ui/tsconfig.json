{
  "compilerOptions": {
    "outDir": "./build",
    "target": "esnext",
    "module": "esnext",
    "composite": true,
    "strict": true,
    "jsx": "preserve",
    "jsxImportSource": "vue",
    "noImplicitThis": true,
    "importHelpers": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "esModuleInterop": false,
    "allowJs": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "strictBindCallApply": true,
    "noEmit": true,
    "strictNullChecks": false,
    "allowSyntheticDefaultImports": true,
    "useUnknownInCatchVariables": false,
    "sourceMap": true,
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "lib": ["esnext", "dom", "dom.iterable", "scripthost"]
  },
  "include": ["src/**/*.ts", "src/**/*.vue", "./src/**/*.svg", ".eslintrc.js", "*.js"],
  "exclude": ["**/node_modules", "**/build", "**/build-dist"]
}
