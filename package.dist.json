{
  "scripts": {
    "dist": "lerna publish from-package"
  },
  "devDependencies": {
    "lerna": "^4.0.0"
  },
  "workspaces": {
    "packages": [
      "desktop/main",
      "desktop/core",
      "desktop/interfaces",
      "datastore/*",
      "datastore/plugins/*",
      "cloud/*",
      "sql/*",
      "cli",
      "playgrounds/*",
      "specification"
    ],
    "nohoist": [
      "**/babel-loader",
      "**/electron-webpack",
      "**/@electron",
      "**/@electron/**",
      "**/electron",
      "**/electron-*",
      "**/electron-builder",
      "**/electron-webpack/**",
      "**/@ulixee/repo-tools",
      "**/@vue/**",
      "**/@vue/**/**",
      "**/vue",
      "**/vue-loader",
      "**/vue-template-compiler",
      "**/vue-class-component",
      "**/@types/web",
      "**/autoprefixer",
      "**/postcss",
      "**/tailwindcss",
      "**/@nodelib",
      "**/@nodelib/**"
    ]
  }
}
