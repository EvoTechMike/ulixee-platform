{
  "name": "@ulixee/devenv-monorepo",
  "private": true,
  "description": "The internal developer environment that we use for building and running the Ulixee platform",
  "scripts": {
    "prepare": "husky install",
    "bump-version": "lerna version --conventional-commits --no-push --exact --force-publish",
    "build": "yarn tsc && cd build && yarn",
    "build:all": "concurrently \"cd hero && yarn build\" \"cd databox && yarn build\" \"yarn build\"",
    "tsc": "tsc -b tsconfig.json && yarn copy:build",
    "watch": "yarn tsc && tsc -b -w tsconfig.json",
    "watch:all": "concurrently -n hero,databox,devenv \"cd hero && yarn watch\" \"cd databox && yarn watch\" \"yarn watch\"",
    "copy:build": "cross-env OUT_DIR=build node copyfiles.js && node prepare-build.js",
    "start": "yarn workspace @ulixee/server start",
    "test": "yarn copy:build && yarn test:build",
    "test:build": "cd build && cross-env NODE_ENV=test jest",
    "test:all": "yarn copy:build && cross-env HERO_DATA_DIR=.data-test NODE_ENV=test jest",
    "lint": "eslint --cache ./"
  },
  "repository": "git@github.com:ulixee/devenv.git",
  "author": "Data Liberation Foundation",
  "contributors": [
    "Caleb Clark",
    "Blake Byrnes"
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ulixee/devenv/issues"
  },
  "homepage": "https://ulixee.org",
  "engines": {
    "node": ">=14.16.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/jest": "^26.0.20",
    "@types/node": "^14.17.9",
    "@typescript-eslint/eslint-plugin": "^4.14.0",
    "@typescript-eslint/parser": "^4.17.0",
    "copyfiles": "^2.4.1",
    "concurrently": "^6.2.1",
    "cross-env": "^7.0.3",
    "eslint": "^7.21.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-import-resolver-typescript": "^2.4.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.2.1",
    "eslint-plugin-monorepo-cop": "^1.0.2",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "@vue/cli-plugin-eslint": "~4.5.0",
    "jest": "^27.0.6",
    "jest-environment-node": "^27.0.6",
    "jest-summary-reporter": "^0.0.2",
    "husky": "^7.0.1",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.2",
    "prettier": "^2.2.1",
    "pretty-quick": "^3.1.0",
    "shx": "^0.3.3",
    "typescript": "~4.3.5"
  },
  "workspaces": {
    "packages": [
      "apps/*",
      "commons",
      "server/*",
      "website",
      "hero/build/*",
      "hero/build/plugins/*",
      "databox/build/*"
    ],
    "nohoist": [
      "**/electron-webpack",
      "**/electron-webpack/**",
      "**/@typescript-eslint",
      "**/@typescript-eslint/**",
      "**/@vue/**",
      "**/@vue/**/**",
      "**/vue",
      "**/vue-loader",
      "**/vue-template-compiler",
      "**/vue-class-component"
    ]
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "resolutions": {
    "remark-slug": "git://github.com/ulixee/remark-slug.git",
    "tough-cookie": "^4.0.0"
  }
}
