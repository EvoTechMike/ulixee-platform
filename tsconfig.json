{
  "extends": "./node_modules/@ulixee/repo-tools/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build",
    "noImplicitOverride": true
  },
  "references": [
    {
      "path": "specification/tsconfig.json"
    }
  ],
  "include": [
    "miner",
    "end-to-end",
    "desktop",
    "playgrounds",
    "datastore",
    "datastore/packager/*.json",
    "sql",
    "client",
    "cli",
    "miner/**/*.json",
    "./*.js",
    "./*.json",
    ".eslintrc.js"
  ],
  "exclude": [
    "**/tsconfig*.json",
    "build/**/*",
    "**/build/**/*",
    "**/build-dist/**/*",
    "node_modules",
    "**/node_modules",
    "desktop/ui",
    "desktop/chrome-extension",
    "specification",
    "hero",
    "datastore/docpage/src",
    "**/website",
    "**/docs",
    "**/*.d.ts",
    "**/*.mjs"
  ]
}
