{
  "extends": "./node_modules/@ulixee/repo-tools/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build"
  },
  "references": [
    {
      "path": "databox"
    },
    {
      "path": "apps/chromealive-core/injected-scripts/tsconfig.json"
    }
  ],
  "include": ["server", "apps", "./*.js", "./*.json", ".eslintrc.js"],
  "exclude": [
    "**/tsconfig*.json",
    "build/**/*",
    "**/build/**/*",
    "**/build-dist/**/*",
    "node_modules",
    "**/node_modules",
    "apps/chromealive-ui",
    "apps/menubar-ui",
    "apps/chromealive-extension",
    "apps/chromealive-core/injected-scripts",
    "**/hero",
    "**/website",
    "**/docs",
    "**/stream",
    "**/*.d.ts",
    "build"
  ]
}
