{
  "extends": "./node_modules/@ulixee/repo-tools/tsconfig.json",
  "compilerOptions": {
    "rootDir": ".",
    "outDir": "./build",
    "noImplicitOverride": true
  },
  "references": [
    {
      "path": "databox"
    },
    {
      "path": "playgrounds/databox-for-hero"
    },
    {
      "path": "apps/chromealive-core/injected-scripts/tsconfig.json"
    }
  ],
  "include": ["server", "e2e", "apps", "playgrounds", "cli", "./*.js", "./*.json", ".eslintrc.js"],
  "exclude": [
    "**/tsconfig*.json",
    "build/**/*",
    "**/build/**/*",
    "**/build-dist/**/*",
    "node_modules",
    "**/node_modules",
    "apps/chromealive-ui",
    "apps/menubar-ui",
    "apps/chromealive-extension",
    "apps/chromealive-core/injected-scripts",
    "playgrounds/databox-for-hero",
    "hero",
    "**/website",
    "**/docs",
    "**/stream",
    "**/*.d.ts"
  ]
}
